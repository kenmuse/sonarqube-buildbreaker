{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Dylan Smith",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/glob": "^0.1.0",
    "fs-extra": "^9.0.1",
    "path": "^0.12.7",
    "request": "^2.88.2",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.2",
    "@types/jest": "^26.0.10",
    "@types/node": "^18.18.3",
    "@types/request": "^2.48.5",
    "@types/semver": "^7.3.4",
    "@typescript-eslint/parser": "^3.10.1",
    "@vercel/ncc": "^0.23.0",
    "eslint": "^7.8.1",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^23.20.0",
    "jest": "^26.0.0",
    "jest-circus": "^26.4.2",
    "js-yaml": "^3.14.0",
    "prettier": "2.1.1",
    "ts-jest": "^26.0.0",
    "typescript": "^4.9.5"
  }
}
